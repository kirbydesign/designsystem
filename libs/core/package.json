{
  "name": "@kirbydesign/core",
  "version": "0.0.61",
  "description": "Core styles and helpers for the Kirby Design System.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "license": "MIT",
  "sideeffects": [
    "./dist/badge/index.js"
  ],
  "scripts": {
    "build": "tsc"
  },
  "devDependencies": {
    "@repo/eslint-config": "*"
  },
  "dependencies": {
    "lit": "^3.1.4"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/index.js"
    },
    "./src/scss/*": {
      "style": "./src/scss/*"
    },
    "./badge": {
      "types": "./dist/types/badge/index.d.ts",
      "default": "./dist/badge/index.js"
    },
    "./badge.component": {
      "types": "./dist/types/badge/badge.component.d.ts",
      "default": "./dist/badge/badge.component.js"
    }
  }
}
