{
  "private": true,
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "workspaces": [
    "libs/*",
    "apps/*",
    "tools/*"
  ],
  "homepage": "https://cookbook.kirby.design",
  "scripts": {
    "build": "nx run-many -t build",
    "start": "nx run-many -t start -p core cookbook",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "test:headless-browser": "npm run test --workspaces --if-present -- --browsers=ChromeCustom",
    "test:headless-browser:single": "npm run test:headless-browser -- --watch=false",
    "test:ci": "npm run test --workspaces --if-present -- --progress false --watch false --code-coverage",
    "publish": "node ./scripts/publish.js",
    "prettier": "prettier --check \"./{libs,apps}/**/*.{ts,json,md,scss,html}\"",
    "prettier:fix": "prettier --write \"./{libs,apps}/**/*.{ts,json,md,scss,html}\"",
    "postinstall": "npm run transpile:tools && npm run extract-scss-variables && npx nx build core && npm run transpile:generate-mocks",
    "transpile:tools": "tsc -b tools/sass-to-ts",
    "transpile:generate-mocks": "tsc -b tools/generate-mocks",
    "extract-scss-variables": "node ./scripts/sass-extract-to-ts.js",
    "generate-mocks": "node ./scripts/generate-mocks.js",
    "sync-node-version": "node ./scripts/sync-node-version.js",
    "storybook": "nx run designsystem:storybook",
    "build-storybook": "nx run designsystem:build-storybook",
    "chromatic": "chromatic",
    "nx": "nx"
  },
  "devDependencies": {
    "@nx/angular": "17.2.8",
    "@nx/js": "17.2.8",
    "@nx/workspace": "17.2.8",
    "@types/node": "18.7.1",
    "@types/webpack": "^4.41.7",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^2.6.11",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.9",
    "is-ci": "^2.0.0",
    "is-docker": "1.1.0",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "nx": "17.3.2",
    "post-npm-install": "^2.0.0",
    "prettier": "2.7.1",
    "sass": "^1.55.0",
    "storybook": "7.6.13",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run sync-node-version && lint-staged",
      "pre-push": "npm run test:headless-browser:single",
      "post-merge": "post-npm-install"
    }
  }
}
