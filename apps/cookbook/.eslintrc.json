{
  "extends": ["@repo/eslint-config/angular.json"],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "kirby",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "cookbook",
            "style": "kebab-case"
          }
        ]
      }
    }
  ]
}
