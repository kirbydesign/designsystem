{
  "extends": ["@repo/eslint-config/angular.json"],
  "ignorePatterns": ["android/", "ios/"],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "kirby",
            "style": "camelCase"
          }
        ]
      }
    }
  ]
}
